@model List<MvcApplication2.Models.caterer>

@{
    ViewBag.Title = "ViewCaterer";
    Layout = "~/Views/Shared/_Layout.cshtml"; 

}

<!-- Header Carousel -->
    <header id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="3500">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <div class="fill" style="background-image:url('../../slide1.jpg');"></div>
                <div class="carousel-caption">
                    <h2>Best Caterers in Town</h2>
                </div>
            </div>
            <div class="item">
                <div class="fill" style="background-image:url('../../slide2.jpg');"></div>
                <div class="carousel-caption">
                    <h2>Search your Caterer</h2>
                </div>
            </div>
            <div class="item">
                <div class="fill" style="background-image:url('../../slide3.jpg');"></div>
                <div class="carousel-caption">
                    <h2>Explore the best for You</h2>
                </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="icon-next"></span>
        </a>
    </header>


       <div class="container">

            <div class="row">
           
                <br />

            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><a href="/Home/Index">Home</a>
                    </li>
                    <li class="active">ViewCaterers</li>
                </ol>

                 <h2 class="page-header">Caterers</h2>

            </div>


@foreach(var x in Model)
{
            <div class="col-md-4 text-center" >
                <div class="thumbnail" style="height: 415px">
                    <img style="height: 220px; width: 500px;" src="@x.image" alt="">
                    <div class="caption">
                        <h3><a href="/Caterer/DetailCaterer/@x.Id">@x.name</a><br>
                            <small>@x.city, Pakistan</small>
                        </h3>
                        <p>@x.note</p>
                        <ul class="list-inline">
                            <li><a href="#"><i class="fa fa-2x fa-facebook-square"></i></a>
                            </li>
                            <li><a href="#"><i class="fa fa-2x fa-linkedin-square"></i></a>
                            </li>
                            <li><a href="#"><i class="fa fa-2x fa-twitter-square"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

}      
       
   
            
        <!-- /.row -->

           </div>


                </div>

       

       