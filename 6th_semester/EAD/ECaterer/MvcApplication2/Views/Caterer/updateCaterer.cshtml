@model List<MvcApplication2.Models.caterer>
@{
    ViewBag.Title = "UpdateCaterer";
    Layout = "~/Views/Shared/_Layout.cshtml"; 

}

<div class="container">
 <div class="row">
     <br />

      <div class="col-lg-12"  style="background-image:url('../../updateCaterer.jpg'); height: 220px; width:1180px;">
                <div class="carousel-caption">
                    <h2>Update Caterer</h2>
                </div>
            </div>
        </div>
     <br />
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><a href="/Home/Index">Home</a>
                    </li>
                    <li class="active">UpdateCaterer</li>
                </ol>              
                
                 <h2 class="page-header">Update Caterers</h2>

                </div>

    @foreach(var x in Model)
{
            <div class="col-md-4 text-center" >
                <div class="thumbnail" style="height: 415px">
                    <img style="height: 220px; width: 500px;" src="@x.image" alt="">
                    <div class="caption">
                        <h3><a href="/Caterer/DetailCaterer/@x.Id">@x.name</a><br>
                            <small>@x.city, Pakistan</small>
                        </h3>
                        <p>@x.note</p>
                         <a href="/Caterer/updateInfo/@x.Id" class="btn btn-primary">Update</a>
                    </div>
                </div>
            </div>

}      


    </div>



