<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context="com.example.google.etakreeb.vendorMain"

android:background="@color/logocolor">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/r2">
    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/img1"
        android:layout_height="wrap_content"
        android:src="@drawable/slogo"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/logout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bb"
        android:text="Logout"
        android:textSize="15sp"
        android:onClick="onClick"
        android:inputType="textCapSentences"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/updateven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bb"
        android:text="Profile"
        android:textSize="15sp"
        android:inputType="textCapSentences"
        android:onClick="onClick"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/logout2"
        android:layout_toStartOf="@+id/logout2" />
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/r2"
        android:layout_height="wrap_content"
        android:id="@+id/ll1"
        android:orientation="vertical">
        <View android:id="@+id/primerdivisor1"
            android:layout_height="2dp"
            android:layout_width="fill_parent"
            android:background="#000000"
            android:layout_margin="4dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pearl Continental Lahore"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:id="@+id/companyName"/>

        <View android:id="@+id/primerdivisor"
            android:layout_height="2dp"
            android:layout_width="fill_parent"
            android:background="#000000"
            android:layout_margin="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/ll1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">



        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TableRow
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tbrow1"
    android:weightSum="100">

    <TextView
        android:id="@+id/dTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:textSize="18sp"
        android:gravity="center"
        android:text="Service"/>
    <TextView
        android:id="@+id/dTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:gravity="center"
        android:textSize="18sp"
        android:text="Price"/>
    <TextView
        android:id="@+id/dTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:gravity="center"
        android:textSize="18sp"
        android:text="Type"/>
    <TextView
        android:id="@+id/dTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:gravity="center"
        android:textSize="15sp"
        android:onClick="onClick"
        android:text="Edit Service"/>

</TableRow>
        </TableLayout>
        </LinearLayout>

    <Button
        android:id="@+id/newSevices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Add New Service"
        android:textSize="15sp"
        android:inputType="textCapSentences"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/viewServices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Customer Request"
        android:textSize="15sp"
        android:inputType="textCapSentences"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />
</RelativeLayout>

